{
	"name": "in-transition",
	"version": "0.0.1",
	"description": "A game about transitioning and finding yourself.",
	"scripts": {
    "build": "npm run flush && webpack --env production && npm run tweego-build",
    "dev": "concurrently --kill-others \"webpack\" \"npm run tweego-watch\" \"npm run serve\" \"npm run watch-scss\"",
    "dev-test": "concurrently --kill-others \"webpack\" \"npm run tweego-watch-test\" \"npm run serve\" \"npm run watch-scss\"",
    "tweego-build": "tweego --output=dist/index.html --head=src/head.html --module=src/modules src/__compiled src/styles/main.scss src/twee",
    "tweego-watch": "tweego --watch --output=dist/index.html --head=src/head.html --module=src/modules src/__compiled src/styles/main.scss src/twee",
    "tweego-watch-test": "tweego --watch --output=dist/index.html --head=src/head.html --module=src/modules src/__compiled src/styles/main.scss src/twee --test",
    "scss": "sass src/styles/main.scss:src/__compiled/main.css --style compressed --no-source-map",
    "watch-scss": "sass src/styles/main.scss:src/__compiled/main.css --style compressed --no-source-map --watch",
    "serve": "live-server dist --port=32769",
    "flush": "rimraf src/__compiled",
    "postinstall": "node .scripts/postinstall.js",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:css": "stylelint \"src/styles/main.scss\"",
    "test": "jest",
    "prepare": "husky install"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"prettier --write",
			"git add"
		],
		"*.scss": [
			"stylelint --fix",
			"git add"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.24.0",
		"@babel/preset-env": "^7.24.0",
		"@compodoc/live-server": "^1.2.3",
		"@types/semver": "^7.5.8",
		"@types/twine-sugarcube": "^2.36.1",
		"babel-loader": "^9.1.3",
		"concurrently": "^7.0.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"husky": "^9.0.11",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"rimraf": "^3.0.2",
		"sass": "^1.49.8",
		"stylelint": "^16.2.1",
		"stylelint-config-standard": "^36.0.0",
		"ts-loader": "^9.2.6",
		"typescript": "^5.5.0-dev.20240308",
		"webpack": "^5.66.0",
		"webpack-cli": "^4.9.1"
	},
	"dependencies": {
		"semver": "^7.6.0",
		"ts-color-class": "^0.10.1"
	}
}
